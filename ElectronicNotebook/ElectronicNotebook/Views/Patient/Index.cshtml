@model IEnumerable<ElectronicNotebook.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h1>Lista de pacientes</h1>

<table class="table table-striped design">
    <tr>
        <th>
            Cédula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Primer apellido
        </th>
        <th>
            Segundo apellido
        </th>
        <th>
            Correo
        </th>
        <th>
            Teléfono
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

@section Scripts
{
    <link href="~/Content/Appointments.css" rel="stylesheet" />
}